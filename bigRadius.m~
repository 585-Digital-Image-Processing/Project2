function  [r, u] = Size (img, B)

% structuring element
B = ones(3);
X = img;
m =1;
u(m) = sum(X(:));
m = m+1;
B1=ones(3+2*m);
X=erosion(X,B1);
X=dilation(X,B1);
u(m)=sum(X(:));
while u(m-1) ~= 0
            m= m+1;
            B1 =ones (3+2*m);
            X = erosion(X, B1); 
            X = dilation(X, B1);
            u(m) = sum(X(:))
end
r = m
end
